<div class="chat">
<div class="wrapper row">
  <div class="content">
    <h1 class="text-white">The World's Simplest Bot Framework</h1>
    <div class="intro">
      <a class="button btn-main" href="https://bottr.co/docs.html">Get Started</a>
      <a class="button" href="https://github.com/Bottr-js/Bottr">Contribute</a>
    </div>
    <div class="message two-small">
      <div class="window">
        <img src="images/Buttons.png" width="50px"/>
      </div>
      <div class="code">
<% code("javascript") do %>
import Bottr from 'bottr';

let Bot = new Bottr.Bot()

bot.on('message_received', (message, session) => {
    session.send('Hello World!')
})

bot.listen()
<% end %>
      </div>
    </div>
  </div>
</div>
